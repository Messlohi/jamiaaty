<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="550dp"
        android:orientation="vertical"
        android:layout_weight="4"
        android:background="@color/white"
        >
    <RelativeLayout
        android:id="@+id/profile_pic"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="vertical"
        android:layout_weight="5"
        >
        <androidx.cardview.widget.CardView
            android:layout_width="75dp"
            android:layout_height="75dp"
            app:cardPreventCornerOverlap="true"
            android:layout_marginTop="3dp"
            android:layout_marginLeft="3dp"
            app:cardCornerRadius="75dp"
            android:scaleType="centerCrop"
            >

            <ImageView
                android:id="@+id/iv_profile_pic"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/ic_baseline_person_24"
                android:clickable="true"
                android:scaleType="centerCrop"
                />

        </androidx.cardview.widget.CardView>
        <LinearLayout
            android:layout_width="320dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingVertical="2dp"
            android:layout_marginLeft="85dp"
            android:layout_marginTop="2dp"
            >
            <TextView
                android:id="@+id/et_name_cp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Said Belahrach"
                android:layout_weight="1"
                android:textColor="@color/black"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/et_bio_cp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Etudiant à ENSA"
                android:paddingStart="4dp"
                android:layout_marginTop="1dp"
                android:textColor="@color/grey"
                android:layout_weight="3"
                android:textSize="14sp" />
        </LinearLayout>
    </RelativeLayout>

        <LinearLayout
            android:id="@+id/user_details"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/profile_pic"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/et_email_cp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="5dp"
                android:layout_weight="3"
                android:drawableLeft="@drawable/custom_email_input"
                android:drawablePadding="4dp"
                android:hint="Said.belabrach@usmba.ac.ma"
                android:paddingStart="8dp"
                android:textColor="#131313"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/et_website_cp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="5dp"
                android:layout_weight="3"
                android:drawableLeft="@drawable/ic_link"
                android:drawablePadding="8dp"
                android:hint="website.com"
                android:paddingStart="8dp"
                android:textColor="#131313"
                android:textSize="15sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="46dp"

            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_below="@+id/user_details"
            android:layout_marginTop="1dp"
            android:layout_marginEnd="0dp"
            android:layout_marginBottom="0dp"
            android:layout_weight="1"
            android:background="#27DDDDDD">

            <LinearLayout
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_gravity="center"
                android:layout_marginEnd="0dp"
                android:layout_marginBottom="0dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingHorizontal="5dp">

                <TextView
                    android:id="@+id/tv_tssimee_post"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp"
                    android:layout_weight="3"
                    android:gravity="center"
                    android:hint="12"
                    android:paddingStart="2dp"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tv_tssimdee_pozst"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp"
                    android:layout_weight="3"
                    android:gravity="center"
                    android:hint="Abonné"
                    android:paddingStart="2dp"
                    android:textColor="@color/grey"
                    android:textSize="15sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_gravity="center"
                android:layout_marginEnd="0dp"
                android:layout_marginBottom="0dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingHorizontal="5dp">

                <TextView
                    android:id="@+id/tv_tssimeed_post"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp"
                    android:layout_weight="3"
                    android:gravity="center"
                    android:hint="12"
                    android:paddingStart="2dp"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tv_tssimdeeze_post"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp"
                    android:layout_weight="3"
                    android:gravity="center"
                    android:hint="Abonné"
                    android:paddingStart="2dp"
                    android:textColor="@color/grey"
                    android:textSize="15sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_gravity="center"
                android:layout_marginEnd="0dp"
                android:layout_marginBottom="0dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingHorizontal="5dp">

                <TextView
                    android:id="@+id/tv_tssime_post"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp"
                    android:layout_weight="3"
                    android:gravity="center"
                    android:hint="12"
                    android:paddingStart="2dp"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tv_tssimdee_post"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp"
                    android:layout_weight="3"
                    android:gravity="center"
                    android:hint="Abonné"
                    android:paddingStart="2dp"
                    android:textColor="@color/grey"
                    android:textSize="15sp" />
            </LinearLayout>
        </LinearLayout>


    </RelativeLayout>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:orientation="vertical"
        android:background="@color/white"

        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:text="Posts"
            android:textSize="18sp"
            android:layout_marginLeft="5dp"
            android:textColor="@color/black"
            android:layout_marginVertical="5dp"
            android:background="#27DDDDDD"
            />
        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#16241241"
            android:paddingTop="10dp"
            />
    </LinearLayout>
</LinearLayout>
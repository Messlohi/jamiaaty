<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".UpdateProfile">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Modifier Profile"
        android:textColor="@color/red"
        android:textSize="40sp"
        android:gravity="center"
        android:layout_marginBottom="30dp"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Name"
        android:paddingStart="4dp"
        android:drawablePadding="7dp"
        android:drawableStart="@drawable/ic_baseline_person_24"
        android:id="@+id/et_name_up"
        android:layout_margin="4dp"
        android:textColor="@android:color/darker_gray"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Profession"
        android:paddingStart="4dp"
        android:drawablePadding="7dp"
        android:drawableStart="@drawable/ic_baseline_work_24"
        android:id="@+id/et_Profession_up"
        android:layout_margin="4dp"
        android:textColor="@android:color/darker_gray"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Email"
        android:paddingStart="4dp"
        android:drawablePadding="7dp"
        android:drawableStart="@drawable/ic_baseline_email_24"
        android:id="@+id/et_email_up"
        android:layout_margin="4dp"
        android:textColor="@android:color/darker_gray"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Website"
        android:paddingStart="4dp"
        android:drawablePadding="7dp"
        android:drawableStart="@drawable/ic_baseline_web_24"
        android:id="@+id/et_website_up"
        android:layout_margin="4dp"
        android:textColor="@android:color/darker_gray"

        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btn_up"
        android:text="Mettre Ã  jour"
        android:layout_margin="10dp"
        android:background="@android:color/holo_red_light"
        android:layout_marginTop="20dp"
        android:textColor="@color/white"
        android:textSize="20sp"
        />

</LinearLayout>
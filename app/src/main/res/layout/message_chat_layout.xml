<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/ll_container_message_chat"
    android:gravity="right"
    android:orientation="vertical">


    <androidx.cardview.widget.CardView
        android:id="@+id/message_reciver_cv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="10dp"
        android:background="@color/light_grey"
        android:padding="10dp"
        android:visibility="visible">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <TextView
                android:id="@+id/tv_messageContent_receiver"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:hint="message"
                android:textColor="@color/black"
                android:layout_marginBottom="5dp"
                android:textColorHint="@color/black"
               />
            <TextView
                android:id="@+id/tv_timeMessage_receiver"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="time"
                android:textSize="10sp"
                android:layout_gravity="right|bottom"
                android:textColorHint="@android:color/darker_gray"
                 />

        </LinearLayout>


    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:id="@+id/message_sender_cv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="10dp"
        android:background="@color/light_blue"
        android:padding="10dp"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/light_blue"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_messageContent_sender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="message"
                android:padding="10dp"
                android:textColor="@color/black"
                android:layout_marginBottom="5dp"
                android:textColorHint="@color/black" />

            <TextView
                android:id="@+id/tv_timeMessage_sender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="time"
                android:textSize="10sp"
                android:layout_gravity="right|bottom"
                android:textColorHint="@android:color/darker_gray"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>


</LinearLayout>
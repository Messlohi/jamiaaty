<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/login_background"
    tools:context=".LoginActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Connexion"
        android:fontFamily="@font/roboto"
        android:layout_marginBottom="40dp"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textSize="45sp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_margin="10dp"
        android:layout_height="47dp"
        android:hint="Email"
        android:textColorHint="@color/grey"
        android:drawableStart="@drawable/ic_email_grey"
        android:drawablePadding="10dp"
        android:id="@+id/login_email_et"
        android:inputType="textEmailAddress"
        android:paddingStart="10dp"
        android:paddingLeft="10dp"
        android:textColor="@color/grey"
        android:background="@drawable/custom_input"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_margin="10dp"
        android:layout_height="47dp"
        android:hint="Mot de passe"
        android:textColorHint="@color/grey"
        android:drawableStart="@drawable/custom_password_input"
        android:drawablePadding="10dp"
        android:inputType="textPassword"
        android:id="@+id/login_password_et"
        android:textColor="@color/grey"
        android:paddingStart="10dp"
        android:paddingLeft="10dp"
        android:background="@drawable/custom_input"
        />
    <CheckBox
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:layout_margin="10dp"
        android:id="@+id/login_checkbox"
        android:buttonTint="@android:color/white"
        android:text="Afficher mot de passe"
        android:textColor="@android:color/white" />

    <Button
        android:id="@+id/button_login"
        android:layout_width="match_parent"
        android:layout_height="47dp"
        android:layout_margin="10dp"
        android:background="@drawable/custom_input"
        android:text="se connecter"
        android:textAllCaps="false"
        android:textColor="@color/purple_500"
        android:textSize="18sp" />

    <Button
        android:id="@+id/login_to_signup"
        android:layout_width="match_parent"
        android:layout_height="47dp"
        android:layout_margin="10dp"
        android:background="@drawable/custom_input"
        android:text="s'inscrire"
        android:textAllCaps="false"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="18sp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Anonyme"
        android:textColor="@color/white"
        android:textSize="22dp"
        android:clickable="true"
        android:id="@+id/asgeust_tv"/>
    <ProgressBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/progrssbar_login"
        android:indeterminateTint="@android:color/white"
        android:indeterminate="true"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_margin="20dp"
        android:visibility="invisible"
        />

</LinearLayout>